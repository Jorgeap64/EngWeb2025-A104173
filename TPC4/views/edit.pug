extends layout

block content
    .w3-card-4 
        header.w3-container.w3-black 
            h1= title
        .w3-container
            form(action="" method='POST')
                table.w3-table-all
                    tr.w3-large
                        th Ano: 
                        th Titulo: 
                        th Elenco: 
                        th Generos:
                    tr
                        td
                            input.w3-input(type='text' name='year' value=filme.year placeholder=filme.year)
                        td
                            input.w3-input(type='text' name='title' value=filme.title placeholder=filme.title)
                        td
                            input.w3-input(type='text' name='cast' value=filme.cast.join(', ') placeholder=filme.cast.join(', '))
                        td
                            input.w3-input(type='text' name='genres' value=filme.genres.join(', ') placeholder=filme.cast.join(', '))
                    tr
                        td(colspan='4')
                            button(type='submit').w3-button.w3-green.w3-btn.w3-round-xxlarge(style='margin-top: 10px').w3-right Save Changes
                            a(href="/movies").w3-button.w3-black.w3-btn.w3-round-xxlarge(style='margin-top: 10px').w3-left Back
                            

